<div class="column is-half">
<% if user_signed_in? %>
  <article class='media box'>
    <figure class='media-left'>
      <p class='image is-64x64'>
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form' %>
    </div>
  </article>
<% end %>
<% @tweets.each do |tweet| %>
  <div class="box">
    <article class='media'>
      <% if anonymous_user?(tweet) %>
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.name) %>
          </figure>
        </div>
      <% else %>
        <div class="media-left">
          <figure class="image is-64x64">
            <%= image_tag("user_unavailable.jpg", alt: "unavailable user image") %>
          </figure>
        </div>
      <% end %>
      <div class="media-content">
        <div class="content">
        <% if anonymous_user?(tweet) %>
          <strong><%= tweet.user.name %></strong><br/>
          <small>@<%= tweet.user.username %></small><br/>
        <% end %>
          <p><%= tweet.tweet %></p>
        </div>
        <% if current_user_signed_in?(tweet) %>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweet, class: 'level-item transparent' do %>
                <span class='icon'><i class="fa fa-link" aria-hidden='true'></i></span>
              <% end %>
              
              <%
=begin%>
 <%= link_to edit_tweet_path(tweet), class: "level-item transparent" do%>
                <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
              <% end %> 
<%
=end%>

              <%= link_to tweet, method: :delete, class: 'transparent', data: { confirm: 'Are you sure you want to delete this tweet?' } do %>
                <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %>
</div>